{
  "name": "microportal",
  "group": "microportal",
  "version": "1.1.0",
  "description": "Base microfrontends for microportal.",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --port 9000 --host 0.0.0.0",
    "build": "NODE_ENV=production webpack -p --progress && docker build -t $npm_package_group/$npm_package_name:$npm_package_version . --no-cache --pull"
  },
  "keywords": [
    "react",
    "redux",
    "microfrontend",
    "single-spa",
    "single-spa-react"
  ],
  "author": "Rafael Ramos",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "copy-webpack-plugin": "^5.0.3",
    "single-spa": "^4.3.6",
    "zone.js": "^0.9.1"
  }
}
